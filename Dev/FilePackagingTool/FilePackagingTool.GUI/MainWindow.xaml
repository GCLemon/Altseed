<Window x:Class="FilePackagingTool.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ファイルパッケージングツール" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Column="0" Grid.Row="0">読み込み元</Label>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Button Content="読み込み"/>
                    <Label/>
                </StackPanel>

                <Label Grid.Column="0" Grid.Row="1">パスワード</Label>
                <TextBox Grid.Column="1" Grid.Row="1"></TextBox>
            </Grid>

            <Grid Margin="5">
            </Grid>
        </StackPanel>
    </Grid>
</Window>
